{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "typeRoots": ["src/node_modules/@types"]  // ✅ Tells TypeScript where to look for types
  },
  "include": [
    "src",
    "src/types/express-extension.d.ts"       // ✅ If you’ve added custom Express extensions
  ],
  "exclude": ["src/node_modules", "**/*.test.ts"]
}
